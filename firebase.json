{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/uicode/**",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/session/**",
        "destination": "/session/index.html"
      },
      {
        "source": "/",
        "function": "homePage"
      },
      {
        "source": "/sitemap.xml",
        "function": "siteMap"
      }
    ],
    "headers": [
      {
        "source": "**/**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      },
      {
        "source": "/models/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-store, max-age=30"
          }
        ]
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ]
}